@{
    ViewBag.Title = "Home Page";
}

<div class="container">

    <div id="topics" class="row list-group">
        @foreach (var item in ViewBag.topics)
        {
            <div class="item  col-xs-4 col-lg-4">
                <div class="thumbnail bd1">

                    <div class="caption bd">
                        <a href="Home/Topic/@item.Id">
                            <h4 class="group inner list-group-item-heading">
                                @item.Name
                            </h4>
                        </a>
                        <ul id="threadList" type="none">
                            @Html.Action("GetThreadsByTopic", "Home", new { id = item.Id })
                        </ul>
                      
                    </div>
                    
                </div>
            </div>
        }




    </div>
</div>
