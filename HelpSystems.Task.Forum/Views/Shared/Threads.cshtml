@model IEnumerable<HelpSystems.Task.Forum.Repository.Entities.Thread>
@using HelpSystems.Task.Forum.Managers 
@if (Model.Count() != 0)
{
    foreach (var item in Model)
    {
        if (item.IsClosed)
        {
            <li>Thread Was closed</li>
            if (User.IsAdmin())
            {
                <a href="/Home/Thread/@item.Id">View Thread</a>
            }

        }
        else
        {
            <li>
                <h4><a href="/Home/Thread/@item.Id">@item.Title</a></h4>
                @Html.Action("GetPostByThreadId", "Home", new { id = item.Id, InMain = true })
            </li>
        }



    }
}
else
{
    <h3>No threads yet</h3>
}



